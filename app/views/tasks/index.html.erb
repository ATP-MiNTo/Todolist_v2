<p style="color: green"><%= notice %></p>

<% content_for :title, "Tasks" %>

<h1>Tasks</h1>

<div id="tasks">
  <% @tasks.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", task %>
      <%= link_to task.status == 1 ? "Mark as Incomplete" : "Mark as Complete", toggle_status_task_path(task)%>
    </p>
  <% end %>
</div>

<%= link_to "Home", root_path %>
<%= link_to "New task", new_task_path %>
