<p style="color: green"><%= notice %></p>

<% content_for :title, "Tasks" %>

<h1>Tasks</h1>

<div id="tasks">
  <% @tasks.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", task %>
      <%= link_to task.status == "ongoing" ? "Mark as Complete" : "Mark as Ongoing", toggle_status_task_path(task) %>
    </p>
  <% end %>
</div>

<%= link_to "Home", root_path %>
<%= link_to "New task", new_task_path %>
